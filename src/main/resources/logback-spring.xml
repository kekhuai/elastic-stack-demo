<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="LOG_FILE" value="./logs/elastic-stack-demo.log"/>
  <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%date %level %thread %class %message%n%xException}"/>
  <property name="FILE_LOG_PATTERN" value="${FILE_LOG_PATTERN:-%date %level %thread %class %message%n%xException}"/>
  <include resource="org/springframework/boot/logging/logback/base.xml"/>
  <root level="INFO">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="FILE" />
  </root>
</configuration>
